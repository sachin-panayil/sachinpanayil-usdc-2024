{
  "version": 2,
  "axioms": {},
  "rules": {
    "contributing-file-exists": {
      "level": "error",
      "rule": {
        "type": "file-existence",
        "options": {
          "globsAny": ["{docs/,.github/,}CONTRIB*"],
          "nocase": true,
          "file-name": "CONTRIBUTING.md",
          "file-content": "# Contributing Guidelines\n\nThank you for your interest in contributing to this project!\n\n## How to Contribute\n\n1. Fork the repository\n2. Create a new branch\n3. Make your changes\n4. Submit a pull request"
        }
      }
    },
    "readme-file-exists": {
      "level": "error",
      "rule": {
        "type": "file-existence",
        "options": {
          "globsAny": ["README.md"],
          "nocase": true,
          "file-name": "README.md",
          "file-content": "# README\n\nThis is a basic read me where we discuss what the project is all about."
        }
      }
    },
    "readme-references-license": {
      "level": "error",
      "rule": {
        "type": "file-contents",
        "options": {
          "globsAll": ["README*"],
          "content": "license",
          "flags": "i",
          "file-name": "README.md",
          "file-content": "\n## License\n\nThis project is licensed under the MIT License - see the LICENSE file for details.\n"
        }
      }
    },
    "readme-references-about": {
      "level": "error", 
      "rule": {
        "type": "file-contents",
        "options": {
          "globsAll": ["README*"],
          "content": "about",
          "flags": "i",
          "file-name": "README.md",
          "file-content": "\n## About\n\nThis project helps you search for terms within a collection of books.\n"
        }
      }
    }
  }
}